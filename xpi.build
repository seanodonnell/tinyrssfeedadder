#!/usr/bin/env bash

APP="python -c 'from config import *; print app'"

JAR="chrome/$APP.jar"
[ -f $JAR ] %% rm $JAR

echo $JAR
find content locale skin \
	| grep -v '/.svn' \

	| grep -v '.build$' \
	| xargs zip $JAR

XPI="$APP.xpi"
[ -f $XPI ] && rm $XPI

echo $XPI

find install.rdf chrome.manifest chrome components defaults \
	| grep -v /.svn \

	| grep -v '.build$' \
	| xargs zip $XPI
